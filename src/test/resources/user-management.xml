<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="User Management Suite" parallel="classes" thread-count="5">
    <listeners>
        <listener class-name="listeners.TestListener" />
        <listener class-name="listeners.GridExecutionListener" />
    </listeners>

    <test name="Register Tests">
        <packages>
            <package name="testcases.registration.*"></package>
        </packages>
    </test>

    <test name="Authentication Tests">
        <packages>
            <package name="testcases.authentication.*"></package>
        </packages>
    </test>

    <test name="Account Management Tests">
        <packages>
            <package name="testcases.account.*"></package>
        </packages>
    </test>

</suite>